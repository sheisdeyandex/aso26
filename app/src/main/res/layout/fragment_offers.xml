<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swl_offers"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.FragmentOffers">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/cgl_top"
    app:layout_constraintGuide_percent="0.02"
    />
   <androidx.constraintlayout.widget.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/cgl_start"
       app:layout_constraintGuide_percent="0.04"
       />
   <androidx.constraintlayout.widget.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/cgl_end"
       app:layout_constraintGuide_percent="0.96"
       />
   <androidx.constraintlayout.widget.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/cgl_help_start"
       app:layout_constraintGuide_percent="0.6"
       />
   <androidx.constraintlayout.widget.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/cgl_help_end"
       app:layout_constraintGuide_percent="0.97"
       />
   <androidx.constraintlayout.widget.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:id="@+id/cgl_help_bottom"
       app:layout_constraintGuide_percent="0.97"
       />
   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="0dp"

app:layout_constraintTop_toBottomOf="@+id/cgl_top"
       app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
tools:listitem="@layout/itemoffers"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_height="wrap_content"
       android:id="@+id/rv_offers"
       />
   <com.google.android.material.button.MaterialButton
       android:layout_width="0dp"
       app:backgroundTint="@null"
       app:icon="@drawable/ic_help_icon"
       android:text="Поддержка"
       android:textSize="@dimen/_8ssp"
       android:textStyle="bold"
       android:background="@drawable/gradient_help_button"
       android:id="@+id/mb_play"
       app:layout_constraintStart_toEndOf="@+id/cgl_help_start"
       app:layout_constraintBottom_toTopOf="@id/cgl_help_bottom"
app:layout_constraintEnd_toStartOf="@+id/cgl_help_end"
       android:layout_height="wrap_content"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>